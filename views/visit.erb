<form action="/visit" method="POST" role="form">
  <div class="form-group">
    <input name="client[name]" type="text" class="form-control" placeholder="Vasya Poopking" value="<%= @booking.name %>">
  </div>
    <div class="form-group">
    <input name="client[phone]" type="text" class="form-control" placeholder="your phone number" value="<%= @booking.phone %>">
  </div>
  <div class="form-group">
    <input id="datetimepicker" name="client[datestamp]" type="text" class="form-control" value="<%= @booking.datestamp %>">
  </div>
</div>
<div class="form-group">
<select name="client[barber]" class="form-control">
  <% @barbers.each do |item| %>
        <option <%= @booking.barber == item.name ? 'selected' : '' %>><%= item.name %></option>
  <% end %>
</select>
</div>
<div class="form-group">
<label>Color you want:</label>
<select name="client[color]" id='color'>
  <option value="#7bd148">Green</option>
</select>
</div>
   <button type="submit" class="btn btn-primary">Submit</button>
</form>
